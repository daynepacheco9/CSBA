<Tela>
    orientation: 'vertical'
    BoxLayout: 
        orientation: 'horizontal'
        Label:
            text: 'Valor 1'
        TextInput:
            id: num1
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Valor 2'
        TextInput:
            id: num2
    BoxLayout:
        Button:
            text: '+'
            on_release: root.realiza_soma()
        Button:
            text: '-'
            on_release: root.realiza_sub()
        Button:
            text: 'X'
            on_release: root.realiza_mult()
        Button:
            text: '%'
            on_release: root.realiza_div() 
    BoxLayout:
        orientation: 'horizontal'
        Label: 
            text: 'Resposta='
        TextInput:
            id: resposta
            